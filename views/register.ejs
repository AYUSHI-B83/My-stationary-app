<%- include ('_layouts/header') -%>

<br/><br/>
<h1 style=" font-size:25px ;color:#f34671"><b><%= title %></b></h1>

<form method="post" action="/users/register">
<br>
    <div class="form-group">
        <label style= "font-size:15px ;color:#107896">Name</label>
        <input type="text" name="name" class="form-control" placeholder="Name">
    </div>

    <div class="form-group">
        <label style= "font-size:15px ;color:#107896">Email</label>
        <input type="text" name="email" class="form-control" placeholder="Email">
    </div>
    
    <div class="form-group">
        <label style= "font-size:15px ;color:#107896">Username</label>
        <input type="text" name="username" class="form-control" placeholder="Username">
    </div>

    <div class="form-group">
        <label style= "font-size:15px ;color:#107896">Password</label>
        <input type="password" name="password" class="form-control"  placeholder="Password">
    </div>
    
    <div class="form-group">
        <label style= "font-size:15px ;color:#107896">Confirm Password</label>
        <input type="password" name="password2" class="form-control"  placeholder="Confirm Password">
    </div>

    <button type="submit" style="border:none;text-align:center;color:white;background-color:#107896" class="btn btn-default">Register</button>
</form>

<%- include ('_layouts/footer') -%>

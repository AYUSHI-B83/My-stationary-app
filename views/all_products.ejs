<%- include ('_layouts/header'); -%>

<div class="row products">
  <% products.forEach(function(p){ %>
  <div class="col-xs-12 col-md-4 p">
    <br /><br /><br />
    <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
      <img style="height: 100 px; width: 200px"
        class="pimage"
        id="imgPreview"
        src="/product_images/<%= p.id %>/<%= p.image %>"
        alt ="" >
    </a>
    <h3 style= "font-size:18px ;color:#107896"><b><%= p.title %></b></h3>
    

    <h4 style=" font-size:18px ;color:#C02F1D"><b>Rs.<%= parseFloat(p.price).toFixed(2) %></b></h4>
    <a style=" font-size:15px " class="vd" href="/products/<%= p.category %>/<%= p.slug %>"
      ><b>View Product</b></a
    >
  </div>
  <% }); %>
</div>
<script>
  var yourImg = document.getElementById("imgPreview");
  if (yourImg && yourImg.style) {
    yourImg.style.height = "100px";
    yourImg.style.width = "200px";
  }
</script>

<%- include ('_layouts/footer'); -%>
